<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="networkState"
            type="com.xmartlabs.template.service.NetworkState"
            />

        <import type="com.xmartlabs.template.service.Status" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/error_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@{networkState.msg}"
            app:visibleGone="@{networkState.msg != null}"
            />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:visibleGone="@{networkState.status == Status.RUNNING}"
            style="?android:attr/progressBarStyle"
            />

        <Button
            android:id="@+id/retry_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Retry"
            app:visibleGone="@{networkState.status == Status.FAILED}"
            style="@style/Widget.AppCompat.Button.Colored"
            />

    </LinearLayout>

</layout>
